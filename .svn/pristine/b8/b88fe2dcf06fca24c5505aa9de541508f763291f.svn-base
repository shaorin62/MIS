	 //Quick View 실행 시 설정
	 this.sUSERAUTH     = "5";   //사용자별 프로그램 사용 권한
	 this.sFORMCAPTION  = "";   //Form의 Title 정보
	 this.sFORMLOCATION = "";   //Form의 Location 정보
