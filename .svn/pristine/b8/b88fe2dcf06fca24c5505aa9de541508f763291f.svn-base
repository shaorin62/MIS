this.fn_HelpDialoge = function (obj, sFromDs, sOldValue, sColumnID) {

	var arrParam = new Array();

	// 조회조건 - 권한그룹조회(Popup)
	if ((obj.name == 'imgHelpSHRGRUP_IDXX') || (obj.name == 'edtSHRGRUP_NAME')) {

