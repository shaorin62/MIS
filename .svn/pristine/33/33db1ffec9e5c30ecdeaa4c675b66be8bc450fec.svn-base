<!--
/*******************************************************************************
     작  성  자 : 김석영
     작  성  일 : 2016.10.14
     내      용 : 인사평가대상자 테이블 목표설정제출
********************************************************************************/
-->
	<update id="EVMB0010.PROC00" parameterClass="hashmap">
	<![CDATA[
		DECLARE   /* EVMB0010.PROC00.인사평가대상자 테이블 목표설정제출 */
			v_ROWCNT INT;
		BEGIN
			
			/*평가마감여부체크*/
			SELECT COUNT(1) 
			  INTO v_ROWCNT
			  FROM EV_TEVPXM
			 WHERE SYNT_EACD = #SYNT_EACD#
			   AND CLSE_YSNO = '1';
			   
			IF v_ROWCNT > 0 THEN
				RAISE_APPLICATION_ERROR(-20000, SF_GET_MESSAGE('EVM010'));   
			END IF;	
				
		    UPDATE EV_WGETXM                /* [인사평가대상자] */
	           SET GLRS_YSNO = '1'          /* 목표설정제출여부 */
	             , GLR1_CODE = NULL         /* 목표설정1차승인코드 */
	             , GLR2_CODE = NULL         /* 목표설정2차승인코드 */
	             , UPDT_USID = #UPDT_USID#  /* 수정작업자 */
	             , UPDT_DATE = SYSDATE      /* 수정일시 */
	         WHERE SYNT_EACD = #SYNT_EACD#  /* 인사평가코드 */
	           AND EMPL_NUMB = #EMPL_NUMB#  /* 사원번호 */
	         ;			    	            
		END;	 
	]]>
	</update>	
