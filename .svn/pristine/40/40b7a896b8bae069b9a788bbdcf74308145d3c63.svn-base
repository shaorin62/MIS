               ,REF3_FILD        				/* 여분3 */
               ,REF4_FILD        				/* 여분4 */
               ,DTIX_TYPE						/* 세금계산서 종류 */
               ,TAXX_DMND					/* 영수구분 */
               ,TAXX_GUBN						/* 과세구분 */
               ,AMEND_CODE					/* 수정사유 */
               ,ORI_ISSUE_ID					/* 원세금계산서번호 */
               ,INST_USID        				/* 생성자 */
               ,INST_DATE        				/* 생성일자 */
               ,UPDT_USID        				/* 수정자  */
               ,UPDT_DATE        				/* 수정일자 */
               ,INPT_GUBN						/* 입력구분 */
              )
       VALUES (
               #TAXY_MONT#       			/* 세금계산서년월 */
              ,#TAXX_NUMB#       			/* 세금계산서번호 */
              ,#CUST_CODE#       			/* 광고주코드 */
              ,#CUST_NAME#       			/* 광고주명 */
              ,#TAXX_AMTX#       			/* 청구금액 */
              ,#TAXX_VATX#       			/* 부가세액 */
              ,#SUMM_AMTX#       			/* 합계금액 */
              ,#DEND_DATE#       			/* 청구일자 */
              ,#PRNT_DATE#       			/* 발행일자 */
              ,#SACH_NUMB#      			/* 매출전표번호 */
              ,#BIZR_NUMB#       			/* 광고주사업자번호 */
              ,#MEMO_FILD#       			/* 비고 */
              ,#MEDA_CODE#       			/* 제작내용 */
              ,#OWNR_NAME#       			/* 광고주대표자명 */
              ,#ADDR_DESC#       			/* 주소 */
              ,#DTL1_ADDR#       			/* 주소1 */
              ,#DTL2_ADDR#       			/* 주소2 */
              ,#TAXX_SANB#       			/* 세금계산서번호 */
              ,#REF1_FILD#       				/* 여분1 */
              ,#REF2_FILD#       				/* 여분2 */
              ,#REF3_FILD#       				/* 여분3 */
              ,#REF4_FILD#       				/* 여분4 */
              ,#DTIX_TYPE#					/* 세금계산서종류 */
              ,#TAXX_DMND#					/* 영수구분 */
              ,#TAXX_GUBN#					/* 과세구분 */
              ,#AMEND_CODE#				/* 수정사유 */
              ,#ORI_ISSUE_ID#				/* 원세금계산서번호 */
              ,#UPDT_USID#   	 			/* 수정작업자 */
              ,TO_CHAR(SYSDATE, 'YYYY-MM-DD AM HH:MI:SS')   /* 입력일시 */
		      ,#UPDT_USID#   	 			/* 수정작업자 */
		      ,TO_CHAR(SYSDATE, 'YYYY-MM-DD AM HH:MI:SS')   /* 수정일시 */
		      ,1						/* 입력구분 */
              )

	]]>
	</insert>
	
	
	<!-- 
