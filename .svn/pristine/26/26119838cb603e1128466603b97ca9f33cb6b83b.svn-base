	<delete id="FAMA0010.DELETE00" parameterClass="hashmap" >
		<![CDATA[
			DELETE	/*FAMA0010.DELETE00  본사정보 삭제*/				
	          FROM   TM_OFFICE
	         WHERE  ACCT_GUBN = #ACCT_GUBN#
	         
			
		]]>
	</delete>

</sqlMap>
