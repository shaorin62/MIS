	<select id="FAMA0010.SEARCH00" parameterClass="hashmap" resultClass="hashmap">
		<![CDATA[	
		SELECT    /* FAMA0010.SEARCH00 본사 정보 조회*/
				   ACCT_GUBN   /*회계단위*/
                  ,OFFI_GUBN
                  ,OFFI_NAME   /*사업장명칭*/
                  ,ENGX_OFFI   /*영문사업장*/
                  ,OWNR_NAME   /*대표자성명*/
                  ,ENGX_OWNR   /*영문대표자성명*/
                  ,BSNS_NUMB   /*사업자번호*/
                  ,JURI_NUMB   /*법인등록번호*/
                  ,BSNS_STAT   /*업태*/
                  ,BSNS_TYPE   /*업종*/
                  ,POST_NUMB   /*우편번호*/
                  ,ADDR_DESC   /*주소*/
                  ,ADDR_DETL   /*주소상세*/
                  ,ENGL_ADDR   /*영문주소*/
                  ,TELE_NUMB   /*전화번호*/
                  ,FAXX_NUMB   /*팩스번호*/
                  ,OFFI_HMPG   /*홈페이지*/
                  ,CNTL_TXOF   /*관할세무서*/
                  ,HTSX_IDXX   /*홈택스ID*/
                  ,ACCT_STDT   /*회계시작일자*/
                  ,ACCT_EDDT   /*회계종료일자*/
                  ,CUST_CODE  /* 거래처*/
                  ,SF_GET_CUSTNAME(CUST_CODE) AS CUST_NAME /*거래처명*/
                  ,VATX_TPYN  /* 총괄납부승인번호*/
                  ,VATX_UTTN  /* 사업자단위과세승인번호*/
                  ,MAST_OFFI  /* 대표사업장*/
                  ,SF_GET_OFFINAME(MAST_OFFI) AS MAST_OFNM  /* 대표사업장*/
                  ,ESTA_DATE  /* 회사설립일*/
                  ,CLSR_DATE  /* 폐기일자*/
                  ,OFAR_SQMT  /* 사업장면적_평방미터*/
                  ,OFAR_PYNG  /* 사업장면적_평*/
                  ,SORT_ORDR  /* 정렬순서*/
                  ,GBN1_CODE  /*시도코드*/
                  ,AREA_GBN1  /*세부시도코드*/
                  ,SF_GET_COMMNAME('GBN1_CODE', GBN1_CODE) AS GBN1_NAME   /*시도명*/
                  ,GBN2_CODE  /*시군구코드*/
                  ,AREA_GBN2  /*세부시군구코드*/
                  ,SF_GET_COMMNAME('GBN2_CODE', GBN2_CODE) AS GBN2_NAME   /*시군구명*/
                  ,EMPL_CONT  /*종업원수*/
                  ,DEPT_CODE
                  ,SF_GET_DEPTNAME (DEPT_CODE) AS DEPT_NAME
                  ,CIOF_CODE	/*관할구청*/
                  ,SF_GET_COMMNAME('CIOF_CODE', CIOF_CODE) AS CIOF_CDNM	/*관할구청명*/
          FROM     TM_OFFICE M
          WHERE    OFFI_NAME LIKE '%' || #OFFI_NAME# || '%'
          ORDER BY ACCT_GUBN
		]]>
	</select>
<!-- 
/*******************************************************************************
   작 성 자 : 오혜성
   작 성 일 : 2016.07.13
   내    용 : 본사정보 저장
********************************************************************************/
-->
	<insert id="FAMA0010.SAVE00" parameterClass="hashmap" >
		<![CDATA[
		DECLARE

			v_ACCT_GUBN VARCHAR2(4);
			iCNT 		INTEGER;
	
		BEGIN
	
			IF #ACCT_GUBN# IS NULL THEN
	
				SELECT LPAD(MAX(ACCT_GUBN) + 1, 4, '0') 
				  INTO   v_ACCT_GUBN
				  FROM   TM_OFFICE;
	
			ELSE
				v_ACCT_GUBN := #ACCT_GUBN#;
			END IF;
			
			IF #OFFI_GUBN# = '1' THEN
				
				SELECT COUNT(1) INTO iCNT
	          	  FROM TM_OFFICE
	         	 WHERE OFFI_GUBN = '1';	/*본점*/
		
	             IF iCNT > 0 THEN
	                 RAISE_APPLICATION_ERROR(-20000,'본점으로 등록되어져있는 사업장정보가 존재합니다.');
	             END IF;
	             
			END IF;
			
			INSERT INTO TM_OFFICE ( /*FAMA0010.SAVE00* 본사정보 저장*/
				   ACCT_GUBN   /*회계단위*/
				  ,OFFI_GUBN   /*사업장구분*/
				  ,OFFI_NAME   /*사업장명칭*/
				  ,ENGX_OFFI   /*영문사업장*/
				  ,OWNR_NAME   /*대표자성명*/
				  ,ENGX_OWNR   /*영문대표자성명*/
				  ,BSNS_NUMB   /*사업자번호*/
				  ,JURI_NUMB   /*법인등록번호*/
				  ,BSNS_STAT   /*업태*/
				  ,BSNS_TYPE   /*업종*/
				  ,POST_NUMB   /*우편번호*/
				  ,ADDR_DESC   /*주소*/
				  ,ADDR_DETL   /*주소상세*/
				  ,ENGL_ADDR   /*영문주소*/
				  ,TELE_NUMB   /*전화번호*/
				  ,FAXX_NUMB   /*팩스번호*/
				  ,OFFI_HMPG   /*홈페이지*/
				  ,CNTL_TXOF   /*관할세무서*/
				  ,HTSX_IDXX   /*홈택스ID*/
				  ,ACCT_STDT   /*회계시작일자*/
				  ,ACCT_EDDT   /*회계종료일자*/
				  ,CUST_CODE   /*거래처코드*/
				  ,VATX_TPYN
				  ,VATX_UTTN
				  ,MAST_OFFI
				  ,ESTA_DATE
				  ,CLSR_DATE
				  ,OFAR_SQMT
				  ,OFAR_PYNG
				  ,SORT_ORDR
				  ,GBN1_CODE
				  ,AREA_GBN1
				  ,GBN2_CODE
				  ,AREA_GBN2
				  ,EMPL_CONT
				  ,DEPT_CODE
				  ,CIOF_CODE	/*관할구청*/
				  ,INST_USID
				  ,INST_DATE
				  ,UPDT_USID
				  ,UPDT_DATE
			) VALUES (
				   v_ACCT_GUBN
				  ,#OFFI_GUBN#
				  ,#OFFI_NAME#
				  ,#ENGX_OFFI#
				  ,#OWNR_NAME#
				  ,#ENGX_OWNR#
				  ,#BSNS_NUMB#
				  ,#JURI_NUMB#
				  ,#BSNS_STAT#
				  ,#BSNS_TYPE#
				  ,#POST_NUMB#
				  ,#ADDR_DESC#
				  ,#ADDR_DETL#
				  ,#ENGL_ADDR#
				  ,#TELE_NUMB#
				  ,#FAXX_NUMB#
				  ,#OFFI_HMPG#
				  ,#CNTL_TXOF#
				  ,#HTSX_IDXX#
				  ,#ACCT_STDT#
				  ,#ACCT_EDDT#
				  ,#CUST_CODE#
				  ,#VATX_TPYN#
				  ,#VATX_UTTN#
				  ,NVL(#MAST_OFFI#, v_ACCT_GUBN)
				  ,#ESTA_DATE#
				  ,#CLSR_DATE#
				  ,#OFAR_SQMT#
				  ,#OFAR_PYNG#
				  ,#SORT_ORDR#
				  ,#GBN1_CODE#
				  ,#AREA_GBN1#
				  ,#GBN2_CODE#
				  ,#AREA_GBN2#
				  ,#EMPL_CONT#
				  ,#DEPT_CODE#
				  ,#CIOF_CODE#
				  ,#UPDT_USID#
				  ,SYSDATE
				  ,#UPDT_USID#
				  ,SYSDATE
			);              
	
		END;
		]]>
	</insert>
<!--
/*******************************************************************************
   작 성 자 : 오혜성
   작 성 일 : 2016.07.13
   내    용 : 본사정보 수정
********************************************************************************/
