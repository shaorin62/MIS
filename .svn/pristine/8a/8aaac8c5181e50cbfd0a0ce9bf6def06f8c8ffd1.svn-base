	<select id="HATB0050.SEARCH01" parameterClass="hashmap" resultClass="hashmap">
	<![CDATA[ 
		SELECT  /* HATB0050.SEARCH01.근태마감여부 조회 */
			    A.ATTE_YMTH				/*근태년월*/
		       ,NVL(A.ENDD_YSNO,'0') AS ENDD_YSNO	/*마감여부*/
		       ,A.REMK_100X				/*비고*/
		       ,A.INST_USID				/*입력작업자*/
		       ,A.INST_DATE				/*입력일시*/
		       ,A.UPDT_USID				/*수정작업자*/
		       ,A.UPDT_DATE				/*수정일시*/
		  FROM AT_ENDDXM A				/*[근태마감정보 ] */
		 WHERE A.ATTE_YMTH = #ATTE_YMTH#
	]]>
	</select>
</sqlMap>
